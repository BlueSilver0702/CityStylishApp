<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@drawable/background_home"
	android:gravity="center"
	android:baselineAligned="false"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:padding="20dp"
	android:orientation="vertical" >
	
	<LinearLayout
		android:gravity="center"
		android:layout_height="0px"
		android:layout_weight="0.4"
		android:layout_width="match_parent" >
		
	    
	</LinearLayout>
	<LinearLayout
		android:gravity="center_vertical"
		android:layout_height="0px"
		android:layout_weight="0.6"
		android:layout_width="match_parent"
		android:orientation="horizontal" >
		
	    <LinearLayout
			android:gravity="center_vertical"
			android:layout_height="match_parent"		
			android:layout_width="0px" 
			android:layout_weight="0.6" >
		
	    	
	    
		</LinearLayout>
		
	    <RelativeLayout
			android:gravity="center_vertical"
			android:layout_height="match_parent"		
			android:layout_width="0px" 
			android:layout_weight="0.6" 
			android:orientation="vertical">
		
	    	<com.agilepoet.introduceyourself.util.ImageViewButton
				android:id="@+id/btn_home_wardrobe"
				android:layout_height="30dp"
				android:layout_width="200dp"
				android:background="@drawable/btn_home_wardrobe_img"
				android:layout_marginTop="10dp" />	
	    	
		
			<com.agilepoet.introduceyourself.util.ImageViewButton
				android:id="@+id/btn_home_citystylistappcom"
				android:layout_height="30dp"
				android:layout_width="200dp" 
				android:background="@drawable/btn_home_citystylistappcom_img"
				android:layout_below="@+id/btn_home_wardrobe"
				android:layout_marginTop="15dp" />
			
			
			<com.agilepoet.introduceyourself.util.ImageViewButton
				android:id="@+id/btn_home_wishlist"
				android:layout_height="30dp"
				android:layout_width="200dp" 
				android:background="@drawable/btn_home_wishlist_img"
				android:layout_below="@+id/btn_home_citystylistappcom"
				android:layout_marginTop="15dp"  />
			
	    
		</RelativeLayout>
	    
	</LinearLayout>
	
	
</LinearLayout>