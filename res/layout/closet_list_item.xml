<!--?xml version="1.0" encoding="utf-8"?-->  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="match_parent" 
    android:background="#fff">   

    <LinearLayout  
	    android:orientation="vertical" 
	    android:layout_width="160dp" 
	    android:layout_height="match_parent"	    
	    android:background="#fff">
	    
        <LinearLayout  
		    android:orientation="vertical" 
		    android:layout_width="160dp" 
		    android:layout_height="120dp"
		    android:layout_gravity="center"	
		    android:background="#fff">
		    
	        <ImageView
		        android:id="@+id/addcloset_listitem_image"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:src="@drawable/itemview_loading"/>
		        <!--  android:src="@drawable/bottoms_02" --> 
	    
	    </LinearLayout>
        
        <LinearLayout  
		    android:orientation="vertical" 
		    android:layout_width="160dp" 
		    android:layout_height="wrap_content"
		    android:layout_gravity="center">           
			    
                <RelativeLayout 
				    android:id="@+id/addcloset_item_relativeLayout"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content">
				    
                    <TextView
                        android:id="@+id/ac_item_line1"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:textColor="@android:color/black"/>
                    
                    
                    <TextView
                        android:id="@+id/ac_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"   
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:textColor="#EE0000"/>
                    
                    <TextView
                        android:id="@+id/ac_item_line2"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/ac_item_line1" 
                        android:textSize="11sp"
                        android:textColor="@android:color/black"/>
                    
                    <TextView
                        android:id="@+id/ac_item_line3"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/ac_item_line2" 
                        android:textSize="11sp"
                        android:textColor="@android:color/black"/>  
                    
				
                </RelativeLayout>
                        
	    </LinearLayout>
	    
        <LinearLayout 
			android:id="@+id/addcloset_item_sizebtn_list"
			android:layout_width="160dp"
			android:layout_height="match_parent"	
			android:gravity="center"				    
			android:orientation="horizontal">			    
                    
				
        </LinearLayout> 
            
    </LinearLayout>   
    
</LinearLayout>  