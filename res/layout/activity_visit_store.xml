<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffff">
    
    <LinearLayout 
	    android:id="@+id/visit_store_rootLayout"    
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:background="#ffff">
    
        <LinearLayout 
		    android:id="@+id/visit_store_topLayout"    
		    android:layout_width="match_parent"
		    android:layout_height="0px"
		    android:layout_weight="0.3"
		    android:orientation="horizontal" 
		    android:background="#ffff">  
		    
            <LinearLayout 
			    android:id="@+id/visit_store_top_logoLayout"    
			    android:layout_height="match_parent"
			    android:layout_width="0px"
			    android:layout_weight="0.28"
			    android:orientation="vertical" 
			    android:background="@drawable/img_vs_applogo_img">        
	        
			</LinearLayout>
			
            <LinearLayout 
			    android:id="@+id/visit_store_top_guideLayout"    
			    android:layout_height="match_parent"
			    android:layout_width="0px"
			    android:layout_weight="0.5"
			    android:orientation="horizontal" 
			    android:background="#ff000000"> 
			    
                <LinearLayout 
				    android:id="@+id/vs_top_guide_leftLinear"    
				    android:layout_height="match_parent"
				    android:layout_width="0px"
				    android:layout_weight="0.5"
				    android:orientation="vertical"> 
				    
                    <TextView
                        android:id="@+id/vs_tg_sex"
                        android:layout_height="0px"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:textSize="30sp"
                        android:gravity="center"
    					android:textStyle="bold"
    					android:text="aaa" >
                    </TextView> 
                        
                    <TextView
                        android:id="@+id/vs_tg_category"
                        android:layout_height="0px"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:textSize="18sp"
    					android:textStyle="bold"
    					android:gravity="center"
    					android:maxLines="1"
    					android:text="ddd">    
                    </TextView>    
			    
				</LinearLayout>
				
                <LinearLayout 
				    android:id="@+id/vs_top_guide_rightLinear"    
				    android:layout_height="match_parent"
				    android:layout_width="0px"
				    android:layout_weight="0.5"
				    android:orientation="vertical"> 
				    
                    <LinearLayout 
					    android:id="@+id/vs_tg_right_top"    
					    android:layout_width="match_parent"
					    android:layout_height="0px"
					    android:layout_weight="0.6"
					    android:orientation="vertical">              
			    
                        <TextView	     
                            android:id="@+id/vs_text1"                  
	                        android:layout_height="0px"
	                        android:layout_weight="0.23"
	                        android:layout_width="match_parent"
	                        android:textSize="11sp"
	    					android:gravity="center"
	    					android:maxLines="1">    
                    	</TextView>
                    	<TextView	      
                    	     android:id="@+id/vs_text2"                 
	                        android:layout_height="0px"
	                        android:layout_weight="0.25"
	                        android:layout_width="match_parent"
	                        android:textSize="11sp"
	    					android:gravity="center"
	    					android:maxLines="1">    
                    	</TextView>
                    	<TextView
                    	     android:id="@+id/vs_text3"	                       
	                        android:layout_height="0px"
	                        android:layout_weight="0.25"
	                        android:layout_width="match_parent"
	                        android:textSize="11sp"
	    					android:gravity="center"
	    					android:maxLines="1">    
                    	</TextView>                   	
                    	
                    	<TextView     
                    	    android:id="@+id/vs_text4"                  
	                        android:layout_height="0px"
	                        android:layout_weight="0.25"
	                        android:layout_width="match_parent"
	                        android:textSize="11sp"
	    					android:gravity="center"
	    					android:maxLines="1">    
                    	</TextView>              	
                    	
                        
					</LinearLayout>
					
                    <LinearLayout 
					    android:id="@+id/vs_tg_right_bottom"    
					    android:layout_width="match_parent"
					    android:layout_height="0px"
					    android:layout_weight="0.4"					    
					    android:orientation="vertical"
					    android:gravity="center"> 				    
                    
			    		<com.agilepoet.introduceyourself.util.ImageViewButton
	                        android:id="@+id/btn_vs_tg_back"
	                        android:layout_width="80dp"
	                        android:layout_height="30dp"	                        
	                        android:background="@drawable/btn_vs_back_img"
	                        android:layout_gravity="center"/>
			    			<!-- android:textAlignment="center" -->
			    		
					</LinearLayout>

                    
			    
				</LinearLayout>
	        
			</LinearLayout>
			
            <LinearLayout 
			    android:id="@+id/visit_store_top_photoLayout"    
			    android:layout_height="match_parent"
			    android:layout_width="0px"
			    android:layout_weight="0.27"
			    android:orientation="vertical"
			    android:background="@drawable/img_vs_photo_img">        
	        
			</LinearLayout>       
        
		</LinearLayout>
		
        <LinearLayout 
		    android:id="@+id/visit_store_centerLayout"    
		    android:layout_width="match_parent"
		    android:layout_height="0px"
		    android:layout_weight="0.1"
		    android:orientation="horizontal" 
		    android:background="#ffff">      
        
        	<LinearLayout 
			    android:id="@+id/visit_store_center_priceLayout"    
			    android:layout_height="match_parent"
			    android:layout_width="0px"
			    android:layout_weight="0.5"
			    android:orientation="vertical" 
			    android:background="#ffff"
			    android:gravity="center">  
			    
        	    <com.agilepoet.introduceyourself.util.ImageViewButton
                     android:id="@+id/btn_vs_price"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"	                        
                     android:background="@drawable/btn_vs_sort_price"
                     android:layout_gravity="center"/>
	        
			</LinearLayout>
			
        	<LinearLayout 
			    android:id="@+id/visit_store_center_alphabeticLayout"    
			    android:layout_height="match_parent"
			    android:layout_width="0px"
			    android:layout_weight="0.5"
			    android:orientation="vertical" 
			    android:background="#ffff"
			    android:gravity="center">

        		<com.agilepoet.introduceyourself.util.ImageViewButton
        		    android:id="@+id/btn_vs_alpha"
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:background="@drawable/btn_vs_sort_alphabetical" />
	        
			</LinearLayout>
			
		</LinearLayout>
		
        <LinearLayout 
		    android:id="@+id/visit_store_bottomLayout"    
		    android:layout_width="match_parent"
		    android:layout_height="0px"
		    android:layout_weight="0.6"
		    android:orientation="vertical" 
		    android:background="#ffff">

            <com.devsmart.android.ui.HorizontalListView
                android:id="@+id/vs_productlist_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff" >
            </com.devsmart.android.ui.HorizontalListView>
        
		</LinearLayout>
        
        
	</LinearLayout>
	
</LinearLayout>