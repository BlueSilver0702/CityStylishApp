
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="vertical" >
	
	<LinearLayout
	    android:id="@+id/createoutfit_accessarys_rootLayout"
	    android:layout_width="fill_parent"	    
		android:background="#ffffffff"	
		android:baselineAligned="false"
		android:gravity="center_vertical"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >

	    <LinearLayout
	    android:id="@+id/createoutfit_accessarys_topLayout"
	    android:layout_width="fill_parent"	    
		android:background="#ffffffff"	
		android:baselineAligned="false"
		android:gravity="center_vertical"
	    android:layout_height="0px"
		android:layout_weight="0.2"
	    android:orientation="vertical" >
	    
	    </LinearLayout>
	    
	    <HorizontalScrollView 
			android:id="@+id/creatoutfit_accessarys_listview"
			android:layout_width="match_parent"
			android:layout_height="0px"
		    android:layout_weight="0.4"
			android:background="#fff"/>
		
	    <LinearLayout
		    android:id="@+id/createoutfit_accessarys_bottomLayout"
		    android:layout_width="fill_parent"	    
			android:background="#ffffffff"	
			android:baselineAligned="false"
			android:gravity="center_vertical"
		    android:layout_height="0px"
			android:layout_weight="0.2"
		    android:orientation="vertical" >
	    
	    </LinearLayout>
	
		<LinearLayout
		    android:id="@+id/creatoutfit_accessarys_barlayout"
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="0px"
		    android:layout_weight="0.2"
		    android:background="#FFFFFFFF">
		     
		    <RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal">
	
			    <com.agilepoet.introduceyourself.util.ImageViewButton 
			        android:id="@+id/btn_createoutfit_accessarys_skip"
			        android:layout_width="60dp"
			        android:layout_height="20dp"
			        android:layout_alignBaseline="@+id/btn_createoutfit_accessarys_pick"
			        android:layout_alignBottom="@+id/btn_createoutfit_accessarys_pick"
			        android:layout_alignParentLeft="true"
			        android:layout_marginLeft="21dp"
			        android:background="@drawable/btn_createoutfit_skip" />
	
			    <com.agilepoet.introduceyourself.util.ImageViewButton 
			        android:id="@+id/btn_createoutfit_accessarys_pick"
			        android:layout_width="60dp"
			        android:layout_height="50dp"
			        android:layout_alignParentTop="true"
			        android:layout_centerHorizontal="true"
			        android:background="@drawable/btn_createoutfit_pick" />
	
			    <com.agilepoet.introduceyourself.util.ImageViewButton 
			        android:id="@+id/btn_createoutfit_accessarys_done"
			        android:layout_width="60dp"
			        android:layout_height="20dp"
			        android:layout_alignBaseline="@+id/btn_createoutfit_accessarys_pick"
			        android:layout_alignBottom="@+id/btn_createoutfit_accessarys_pick"
			        android:layout_alignParentRight="true"
			        android:layout_marginRight="26dp"
			        android:background="@drawable/btn_createoutfit_done" />
				    
		    </RelativeLayout>    
	    </LinearLayout> 
    </LinearLayout>
</LinearLayout>

